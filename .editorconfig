root = true

[*]
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true
indent_style = space
indent_size = 2

[*.{js, html, css}]
end_of_line = lf
tab_width = 2

[*.go]
indent_style = tab
indent_size = 4

[Justfile]
indent_style = space
indent_size = 4

[go.{mod,sum}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset

[*.md]
indent_size = 4
trim_trailing_whitespace = false

eclint_indent_style = unset
